{
  "$schema": "https://frontmatter.codes/frontmatter.schema.json",
  "frontMatter.taxonomy.contentTypes": [
    {
      "name": "default",
      "pageBundle": false,
      "previewPath": null,
      "fields": [
        {
          "title": "Title",
          "name": "title",
          "type": "string"
        },
        {
          "title": "Description",
          "name": "description",
          "type": "string"
        },
        {
          "title": "Publishing date",
          "name": "date",
          "type": "datetime",
          "default": "{{now}}",
          "isPublishDate": true
        },
        {
          "title": "Content preview",
          "name": "preview",
          "type": "image"
        },
        {
          "title": "Author",
          "name": "author",
          "type": "string"
        },
        {
          "title": "Is in draft",
          "name": "draft",
          "type": "draft"
        },
        {
          "title": "Tags",
          "name": "tags",
          "type": "tags"
        },
        {
          "title": "Categories",
          "name": "categories",
          "type": "categories"
        }
      ]
    },
    {
      "name": "article",
      "pageBundle": false,
      "previewPath": null,
      "fields": [
        {
          "title": "Title",
          "name": "title",
          "type": "string"
        },
        {
          "title": "Description",
          "name": "description",
          "type": "string"
        },
        {
          "title": "Publishing date",
          "name": "date",
          "type": "datetime",
          "default": "{{now}}",
          "isPublishDate": true
        },
        {
          "title": "Content preview",
          "name": "preview",
          "type": "image"
        },
        {
          "title": "Author",
          "name": "author",
          "type": "string"
        },
        {
          "title": "Is in draft",
          "name": "draft",
          "type": "draft"
        },
        {
          "title": "Tags",
          "name": "tags",
          "type": "tags"
        },
        {
          "title": "Categories",
          "name": "categories",
          "type": "categories"
        }
      ]
    },
    {
        "name": "page",
        "pageBundle": false,
        "previewPath": null,
        "fields": [
          {
            "title": "Title",
            "name": "title",
            "type": "string"
          },
          {
            "title": "Description",
            "name": "description",
            "type": "string"
          },
          {
            "title": "Publishing date",
            "name": "date",
            "type": "datetime",
            "default": "{{now}}",
            "isPublishDate": true
          },
          {
            "title": "Content preview",
            "name": "preview",
            "type": "image"
          },
          {
            "title": "Author",
            "name": "author",
            "type": "string"
          },
          {
            "title": "Is in draft",
            "name": "draft",
            "type": "draft"
          },
          {
            "title": "Menu",
            "name": "menu",
            "type": "string"
          }
        ]
    }
  ],
  "frontMatter.framework.id": "hugo",
  "frontMatter.content.publicFolder": "static",
  "frontMatter.preview.host": "http://localhost:1313",
  "frontMatter.content.pageFolders": [
    {
      "title": "posts",
      "path": "[[workspace]]/content/posts"
    },
    {
      "title": "articles",
      "path": "[[workspace]]/content/articles"
    },
    {
      "title": "about",
      "path": "[[workspace]]/content/about"
    }
  ],
  "frontMatter.taxonomy.tags": [
    "Crimea",
    "Nuclear War",
    "Putin",
    "Russia",
    "Ukraine"
  ],
  "frontMatter.taxonomy.categories": [],
  

  "frontMatter.data.files": [
    {
      "id": "authors",
      "title": "Authors",
      "file": "[[workspace]]/data/authors.json", // Adapt to your needs
      "schema": {
        "title": "Author",
        "type": "object",
        "required": ["name"],
        "properties": {
          "slug": {
            "title": "slug",
            "type": "string"
          },
          "name": {
            "title": "name",
            "type": "string"
          },
        }
      }
    }
  ]
}
